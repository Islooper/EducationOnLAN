            <FontAwesomeIconView glyphName="TABLE" size="25" />
         </graphic>
      </JFXButton>

      <JFXButton fx:id="snapShotBtn" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#snapShot" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="截图" textAlignment="CENTER">
         <graphic>
            <FontAwesomeIconView glyphName="fa-camera-retro" size="25" />
         </graphic>
      </JFXButton>

      <JFXButton contentDisplay="TOP" layoutX="10.0" layoutY="81.0" mnemonicParsing="false" onAction="#loadBookTable" prefHeight="400.0" prefWidth="160.0" styleClass="toolbar-button" text="设置" textAlignment="CENTER">
